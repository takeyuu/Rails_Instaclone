<div class="modal-dialog modal-dialog-centered show-modal">
  <div class="modal-content">
    <div class="card show-card">
      <div class="row no-gutters">
        <div class="col-md-6 d-flex align-items-center">
          <%= image_tag select_picture.image.url, class: "bd-placeholder-img card-img img-fluid show-img" %>
        </div>
        <div class="col-md-6">
          <div class="card-body">
            <div class="card-title">
              <%= image_tag select_picture.user.icon_image.mini_icon.url %>
              <%= select_picture.user.name %>
            </div>

            <p class="card-text"><%= select_picture.article %></p>
            <p class="card-text"><small class="text-muted"><%= select_picture.created_at.strftime('%Y年%m月%d日') %></small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
