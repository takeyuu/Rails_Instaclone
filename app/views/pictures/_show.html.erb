            <p class="card-text like-btn"></p>
            <p class="card-text"><small class="text-muted"><%= select_picture.created_at.strftime('%Y年%m月%d日') %></small></p>
            <div class='footer-btn'>
              <div class="like-btn">
                <i class="fas fa-heart"></i>
              </div>
              <% if select_picture.user_id == current_user.id %>
                <div class="edit-destroy-btn">
                  <%= link_to edit_picture_path(select_picture.id), remote: true do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
