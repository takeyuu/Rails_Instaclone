<%= form_with(model: @user, local: true) do |f| %>
  <div class="main container">
    <div class="row">
      <h2 class="col-md-7">新規アカウント作成</h2>
      <div class="form-group col-md-7">
        <%= f.label :name, '名前', class: "control-label" %>
        <%= f.text_field :name, placeholder: '名前を入力してください', class: "form-control" %>
        <% if @user.errors.include?(:name) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:name).first %></p>
        <% end %>
      </div>
      <div class="form-group col-md-7">
        <%= f.label :email, 'email', class: "control-label" %>
        <%= f.email_field :email, placeholder: 'メールアドレスを入力してください', class: "form-control" %>
        <% if @user.errors.include?(:email) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:email).first %></p>
        <% end %>
      </div>
      <div class="form-group col-md-7">
        <%= f.label :password, 'パスワード', class: "control-label" %>
        <%= f.password_field :password, placeholder: 'パスワード6文字以上', class: "form-control" %>
        <% if @user.errors.include?(:password) %>
          <p style="color: red;"><%= @user.errors.full_messages_for(:password).first %></p>
        <% end %>
      </div>
      <div class="form-group col-md-7">
        <%= f.label :password_confirmation, 'パスワード確認', class: "control-label" %>
        <%= f.password_field :password_confirmation, placeholder: 'もう一度パスワードを入力してください', class: "form-control" %>
      </div>
      <div class="submit col-md-7">
        <%= f.submit 'アカウント登録', class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
<% end %>
