<!DOCTYPE html>
<html>
  <head>
    <title>IGcloneApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="flash_message">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    </div>
    <header>
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
          <span class="navbar-brand">IGcloneApp</span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <% if logged_in? %>
              <ul class="navbar-nav">
                <li class="nav-item">
                  <%= link_to 'Home', user_path(current_user.id), class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "#{current_user.name}のページ", user_path(current_user.id), class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログアウト', session_path(current_user.id), class: 'nav-link',
                      method: :delete, data: { confirm: 'ログアウトしてよろしいですか？'} %>
                </li>
              </ul>
            <% else %>
              <ul class="navbar-nav">
                <li class="nav-item">
                  <%= link_to 'ログイン', new_session_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_user_path, class: "nav-link" %>
                </li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
